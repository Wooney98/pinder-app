<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_animal_picture"
            android:layout_width="185dp"
            android:layout_height="172dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/shape_alpha" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="46dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/imageview_animal_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="구분: 신고" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_animal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/imageview_animal_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="품종: 개" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_animal_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/imageview_animal_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="성별: 남자" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/textview_animal_type"
            app:layout_constraintTop_toBottomOf="@id/textview_animal_type"
            tools:text="위치: 서울특별시" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_Detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/textview_animal_type"
            app:layout_constraintTop_toBottomOf="@id/textview_animal_type"
            tools:text="천호동" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_upload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/textview_animal_type"
            app:layout_constraintTop_toBottomOf="@id/textview_location"
            tools:text="등록일: 2022-05-01" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/textview_animal_type"
            app:layout_constraintTop_toBottomOf="@id/textview_location"
            tools:text="휴대폰번호: 010-1234-5678" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_animal_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/imageview_animal_picture"
            app:layout_constraintTop_toBottomOf="@id/imageview_animal_picture"
            tools:text="특징: 작다" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>