<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/base_info"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#D1D0D3"
                    android:gravity="center"
                    android:text="기본정보"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text = "구분"
                    android:textSize="20dp" />
                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"/>
                <View
                    android:background="#D1D0D3"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="지역"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>


                <Spinner
                    android:id="@+id/spinner_category_locate"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/et_locate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="구체적인 장소를 적어주세요"/>

                <View
                    android:background="#D1D0D3"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reporter_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="연락처"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/et_reporter_phoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="연락처를 남겨주세요" />

            </LinearLayout>

            <TextView
                android:id="@+id/animal_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#D1D0D3"
                android:gravity="center"
                android:text="동물정보"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_animal_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="품종"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

                <Spinner
                    android:id="@+id/spinner_pet_kind"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"/>

                <View
                    android:background="#D1D0D3"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/animal_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="성별"
                    android:textSize="20dp"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtn_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="남자" />

                    <RadioButton
                        android:id="@+id/rbtn_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="여자"/>
                    <RadioButton
                        android:id="@+id/rbtn_unknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="미확인"/>


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    android:background="#D1D0D3"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="특징"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_write_feature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="눈에띄는 특징을 적어주세요~"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_report_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="제보 사진 :"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/animal_Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/image" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/write_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="등록하기"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </LinearLayout>




    </ScrollView>
</layout>
